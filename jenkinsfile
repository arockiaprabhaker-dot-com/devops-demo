pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Building Docker image...'
                sh 'docker build -t my-app:latest .'
            }
        }

        stage('Deploy') {
            steps {
                sh 'minikube -p minikube update-context'
                sh 'kubectl apply -f k8s/deployment.yaml --validate=false'
            }
        }
    } 
} 

